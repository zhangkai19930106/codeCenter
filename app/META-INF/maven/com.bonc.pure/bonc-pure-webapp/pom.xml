<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.bonc.pure</groupId>
		<artifactId>bonc-pure-parent</artifactId>
		<version>1.3.5</version>
	</parent>

	<artifactId>bonc-pure-webapp</artifactId>
	<packaging>war</packaging>
	<name>pure webapp war</name>

	<dependencies>
		<!-- 公司jar依赖 -->
		<dependency>
			<groupId>com.bonc.sso</groupId>
			<artifactId>bonc-sso-client</artifactId>
			<version>${bonc.sso.version}</version>
		</dependency>
		<dependency>
			<groupId>com.bonc.pure</groupId>
			<artifactId>bonc-pure-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.sencha</groupId>
			<artifactId>extjs</artifactId>
			<version>3.4.0</version>
		</dependency>
		<dependency>
			<groupId>com.xheditor</groupId>
			<artifactId>xheditor</artifactId>
			<version>1.1.14</version>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
			<resource>
				<directory>src/main/static</directory>
			</resource>
			<resource>
				<directory>src/main/java</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<!-- 压缩 -->
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<goals>
							<goal>compress</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<encoding>UTF-8</encoding>
					<jswarn>false</jswarn>
					<force>true</force>
					<linebreakpos>0</linebreakpos>
					<excludeResources>true</excludeResources>
					<preProcessAggregates>true</preProcessAggregates>
					<nosuffix>true</nosuffix>
					<sourceDirectory>${project.build.directory}/classes/</sourceDirectory>
					<includes>
						<include>**/pure/js/pure.js</include>
						<include>**/pure/css/red.css</include>
						<include>**/pure/css/blue.css</include>
						<include>**/pure/css/grey.css</include>
					</includes>
					<outputDirectory>${project.build.directory}/classes/</outputDirectory>
					<aggregations>
						<aggregation>
							<removeIncluded>true</removeIncluded>
							<insertNewLine>true</insertNewLine>
							<inputDir>${project.build.directory}/classes/static/pure/js/</inputDir>
							<output>${project.build.directory}/classes/static/pure/js/pure.js</output>
							<includes>
								<include>*.js</include>
							</includes>
							<excludes>
								<exclude>pure.js</exclude>
							</excludes>
						</aggregation>
						<aggregation>
							<insertNewLine>true</insertNewLine>
							<inputDir>${project.build.directory}/classes/static/pure/css/</inputDir>
							<output>${project.build.directory}/classes/static/pure/css/blue.css</output>
							<includes>
								<include>*.css</include>
							</includes>
							<excludes>
								<exclude>blue.css</exclude>
								<exclude>grey*.css</exclude>
								<exclude>red*.css</exclude>
							</excludes>
						</aggregation>
						<aggregation>
							<insertNewLine>true</insertNewLine>
							<inputDir>${project.build.directory}/classes/static/pure/css/</inputDir>
							<output>${project.build.directory}/classes/static/pure/css/grey.css</output>
							<includes>
								<include>*.css</include>
							</includes>
							<excludes>
								<exclude>blue*.css</exclude>
								<exclude>grey.css</exclude>
								<exclude>red*.css</exclude>
							</excludes>
						</aggregation>
						<aggregation>
							<removeIncluded>true</removeIncluded>
							<insertNewLine>true</insertNewLine>
							<inputDir>${project.build.directory}/classes/static/pure/css/</inputDir>
							<output>${project.build.directory}/classes/static/pure/css/red.css</output>
							<includes>
								<include>*.css</include>
							</includes>
							<excludes>
								<exclude>blue*.css</exclude>
								<exclude>grey*.css</exclude>
								<exclude>red.css</exclude>
							</excludes>
						</aggregation>
					</aggregations>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<executions>
					<execution>
						<id>prepare-war</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>exploded</goal>
						</goals>
						<configuration>
							<webappDirectory>${project.build.directory}/${project.artifactId}-${project.version}/</webappDirectory>
						</configuration>
					</execution>
					<execution>
						<id>default-war</id>
						<phase>package</phase>
						<goals>
							<goal>war</goal>
						</goals>
						<configuration>
							<warSourceDirectory>${project.build.directory}/${project.artifactId}-${project.version}/</warSourceDirectory>
							<packagingExcludes>WEB-INF/classes/com/,WEB-INF/classes/template/,WEB-INF/classes/static/,WEB-INF/cfg.db.local.properties,WEB-INF/cfg.db.dev.properties</packagingExcludes>
							<webResources>
								<resource>
									<directory>target/lib</directory>
									<targetPath>WEB-INF/lib/</targetPath>
								</resource>
							</webResources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>replace-for-deploy</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<replace encoding="${encoding}"
									file="${project.build.directory}/${project.artifactId}-${project.version}/WEB-INF/applicationContext.xml"
									token="cfg.db.dev.properties" value="cfg.db.deploy.properties" />
								<replace encoding="${encoding}"
									file="${project.build.directory}/${project.artifactId}-${project.version}/WEB-INF/applicationContext.xml"
									token="cfg.db.local.properties" value="cfg.db.deploy.properties" />
								<replace encoding="${encoding}"
									file="${project.build.directory}/classes/struts.xml" token="browserCache&quot; value=&quot;false"
									value="browserCache&quot; value=&quot;true" />
								<replace encoding="${encoding}"
									file="${project.build.directory}/classes/template/pure/head.ftl"
									token="#version#" value="${project.version}" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<!-- 打包jar包设置 -->
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<!-- 将action打包 -->
					<execution>
						<id>pure-webapp-action</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classifier>action</classifier>
							<classesDirectory>target/classes/</classesDirectory>
							<outputDirectory>target/lib</outputDirectory>
							<includes>
								<include>com/bonc/**/*.class</include>
								<include>template/**</include>
							</includes>
						</configuration>
					</execution>
					<execution>
						<!-- 将静态资源打包 -->
						<id>pure-webapp-static</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<classifier>static</classifier>
							<classesDirectory>target/classes/</classesDirectory>
							<outputDirectory>target/lib</outputDirectory>
							<includes>
								<include>static/**</include>
							</includes>
							<excludes>
								<exclude>**/blue-*.css</exclude>
								<exclude>**/grey-*.css</exclude>
								<exclude>**/red-*.css</exclude>
							</excludes>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<configuration>
					<attach>true</attach>
					<excludes>
						<exclude>static/**</exclude>
					</excludes>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<dependencies>
					<dependency>
						<groupId>com.bonc.assemblies</groupId>
						<artifactId>bonc-assemblies</artifactId>
						<version>${bonc.assemblies.version}</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptorRefs>
								<descriptorRef>package-release</descriptorRef>
							</descriptorRefs>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- 运行项目请使用命令 mvn tomcat6:run -->
			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat6-maven-plugin</artifactId>
				<configuration>
					<!-- 项目运行的contextpath -->
					<path>/pure</path>
					<warDirectory>${project.build.directory}/${project.artifactId}-${project.version}</warDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>