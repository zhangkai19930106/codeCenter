<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="pure-forum" namespace="/forum" extends="pure-default">
		<action name="*" class="com.bonc.forum.struts2.{1}Action" >
			<result name="success">/WEB-INF/view/forum/{1}.jsp</result>
			<result name="create">/WEB-INF/view/forum/{1}-create.jsp</result>
			<result name="update">/WEB-INF/view/forum/{1}-update.jsp</result>
			<result name="all">/WEB-INF/view/forum/{1}-all.jsp</result>
		</action>
	</package>
</struts>